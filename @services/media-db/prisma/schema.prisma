datasource db {
  provider = "mongodb"
  url      = env("MEDIA_DB_MONGO_URL")
}

generator clientjs {
  provider = "prisma-client-js"
  output   = "./generated/clientjs"
}

generator clientgo {
  provider = "go run github.com/steebchen/prisma-client-go"
  output   = "./generated/clientgo"
}

model Media {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  // Data
  title       String
  type        MediaType
  description String
  releaseDate DateTime
  source      String
  sourceID    String

  // Relations
  assets MediaImage[]

  // Meta
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
}

enum MediaType {
  MOVIE
}

model MediaImage {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  // Data
  mediaID   String @db.ObjectId
  url       String
  thumbhash String
  width     Int
  height    Int

  // Relations
  media Media @relation(fields: [mediaID], references: [id])

  // Meta
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
}
