datasource db {
  provider = "mongodb"
  url      = env("MEDIA_DB_MONGO_URL")
}

generator clientjs {
  provider = "prisma-client-js"
  output   = "./generated/clientjs"
}

generator clientgo {
  provider = "go run github.com/steebchen/prisma-client-go"
  output   = "./generated/clientgo"
}

model Media {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  // Data
  title       String
  type        MediaType
  description String
  releaseDate DateTime
  source      String
  sourceID    String

  // Meta
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
}

enum MediaType {
  MOVIE
}
